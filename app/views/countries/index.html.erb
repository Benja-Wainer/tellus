<div class="container">
  <div class="row">
    <h3 class="text-center text-white my-3">Your Search Results</h3>
    <% @countries.each do |country| %>
      <div class="col-4 my-4">
        <div>
          <figure>
            <%# <img src=  alt="Mountains"> %>
            <%= image_tag "#{country.flag_url}", style: "width: 400px;" %>
            <figcaption><%= link_to "#{country.name}", country_path(country), class: "text-white link-underline-opacity-0" %></figcaption>
          </figure>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }, defaults: { label_html: { class: 'text-light' }, input_html: {class: 'text-light bg-dark border border-light'} }) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>
  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-primary" %>
  </div>
<% end %>
<div class="mt-3">
  <%= render "devise/shared/links", class: "pt-5" %>
</div>
